mixin chat()
    link(rel='stylesheet', href='/stylesheets/style.css')

    template#message
      li
        span.sender
        span.content
        span.timestamp

    #chat
    ul#messages(style="height: 30em; max-height: 30em; overflow-y: scroll;")
    #send(class="input-field")
        input(type="text" placeholder="Enter chat..." id="message-field")
  
    script(src="/socket.io/socket.io.js")
