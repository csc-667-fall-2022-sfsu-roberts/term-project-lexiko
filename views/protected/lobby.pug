extends layout

block content
  h1= Lobby
  if username 
    h2 Welcome #{username} (#{userID})
  li 
      a(href="/") Homepage

  #games-list
    ul
    button#create-game.btn.grad-2 Create a new game
  template#message
    span.sender
    span.content
    span.timestamp

  #chat
    #messages
    #send
      input(type="text" id="message-field")

block footer
  script(src="/socket.io/socket.io.js")
  script(src="/javascripts/chat.js")
  script(src="/javascripts/gameLogic.js")

  